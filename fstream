#include<stdlib.h>
#include<iostream>
#include<fstream>
#include<string>

using namespace std;

int main() {

  string line;
  int i = 1;
  
  ifstream fileIn( "Datei.txt" );
  fileIn.close();
  ofstream fileOut( "Datei-a.txt" );
  fileOut.close()
  
  while(fileIn == true) {
    
    fileIn.open();
    getline( fileIn, line);
    fileIn.close();
    
    fileOut.open();
    fileOut << i << ": " << line << endl;
    fileOut.close();
    
    i++;
    }
}
